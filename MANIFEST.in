include LICENSE
include README.md

# Example configs or local-only files that should not ship
exclude config.yaml
exclude .env

# Exclude dev/test content from the sdist
prune tests
prune examples
prune docs
prune scripts
prune .github
prune logs
prune .vscode
prune dist
prune build
prune .pytest_cache
prune sisensepypi
prune venv
prune .venv
prune venv-*
prune pysisense.egg-info

# Ignore build/cache noise
recursive-exclude __pycache__ *
global-exclude *.py[cod]
global-exclude .DS_Store
global-exclude *.so *.dylib
